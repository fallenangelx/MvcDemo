@model MvcDemo.Models.BlogPostModel

@{
    ViewBag.Title = "Create";
}

@section Scripts
{
    @Scripts.Render("~/bundles/loginScript")
}

<div class="panel panel-default">
    <div class="panel-heading">New Post</div>
    <div class="panel-body">
        <div class="form-group">
            <div class="row col-lg-8">
                <label for="inputTitle" class="control-label">Title</label>
                <input type="text" class="form-control" id="inputTitle" placeholder="Title" required>
            </div>
            <div class="row col-lg-8">
                <div class="form-group">
                    <label class="control-label" for="inputPostText">Post Body</label>
                    <textarea class="form-control" rows="6" id="inputPostText" required></textarea>
                </div>
            </div>
            <div class="row col-md-8">
                <div class="form-group">
                    <div class="row col-md-8">
                        <button type="submit" class="btn btn-primary" id="Post">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
